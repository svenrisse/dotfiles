[module/power]
type=custom/text
content="  "
click-left= exec ~/.config/i3/scripts/powermenu
content-foreground=${colors.black}
content-background=${colors.yellow}

; vim:ft=dosini
[module/time]
type = internal/date
interval = 60

format = <label>
format-background = #2a2e36
format-foreground = #82868e

date =   %H:%M%{F-}
time-alt = 󰃭 %a, %b %d%{F-}

label = %date%%time%
